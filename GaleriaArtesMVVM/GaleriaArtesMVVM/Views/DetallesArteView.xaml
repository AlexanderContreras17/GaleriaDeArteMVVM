<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaleriaArtesMVVM.Views.DetallesArteView" Title="Detalles">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10">
                <Image Source="{Binding Foto}"/>
                <Label>Título:</Label>
                <Label Text="{Binding Titulo}"></Label>
                <Label>Tipo:</Label>
                <Label Text="{Binding Tipo}"></Label>
                <Label>Descripcion:</Label>
                <Label Text="{Binding Descripcion}"></Label>
                <Label>Fecha:</Label>
                <Label Text="{Binding Fecha}"></Label>
                <Label>Artista:</Label>
                <Label Text="{Binding Artista}"></Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>