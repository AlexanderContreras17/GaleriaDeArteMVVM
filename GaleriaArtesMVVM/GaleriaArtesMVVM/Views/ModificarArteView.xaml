<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaleriaArtesMVVM.Views.ModificarArteView">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Listo" Command="{Binding GuardarCommand}"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Margin="10">
            <Label
                HorizontalOptions="Center"
                FontSize="Title" Margin="0,10,0,10">Modificar Pieza de Arte</Label>
            <Label>Título:</Label>
            <Entry Text="{Binding Arte.Titulo}"></Entry>
            <Label>Tipo:</Label>
            <Entry Text="{Binding Arte.Tipo}"></Entry>
            <Label>Descripcion:</Label>
            <Entry Text="{Binding Arte.Descripcion}"></Entry>
            <Label>Foto:</Label>
            <Entry Text="{Binding Arte.Foto}"></Entry>
            <Label>Fecha:</Label>
            <Entry Text="{Binding Arte.Fecha}"></Entry>
            <Label>Artista:</Label>
            <Entry Text="{Binding Arte.Artista}"></Entry>
        </StackLayout>
    </ScrollView>
</ContentPage>